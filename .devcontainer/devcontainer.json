{
  "name": "puxadinho",
  "postAttachCommand": "./.devcontainer/hooks/post_attach.sh",
  "remoteUser": "dev",
  "build": {
    "dockerfile": "../container/devcontainer/Dockerfile",
    "context": ".."
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "charliermarsh.ruff",
        "eamodio.gitlens",
        "EditorConfig.EditorConfig",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker",
        "ms-python.debugpy",
        "ms-python.python",
        "ms-vscode.makefile-tools"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.rulers": [
          80,
          120
        ],
        "editor.quickSuggestions": {
          "strings": "on"
        },
        "editor.suggest.insertMode": "replace",
        "git.enableCommitSigning": true,
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/usr/bin/bash"
          }
        },
        "terminal.integrated.shellIntegration.decorationsEnabled": "never",
        "[json]": {
          "editor.quickSuggestions": {
            "strings": true
          },
          "editor.suggest.insertMode": "replace",
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[python]": {
          "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
          },
          "editor.defaultFormatter": "charliermarsh.ruff"
        }
      }
    }
  },
  "mounts": [
    "type=bind,source=/var/run/docker.sock,target=/var/run/docker.sock",
    "type=bind,consistency=cached,source=${localWorkspaceFolder}/container/devcontainer/volumes/history,target=/home/dev/.history"
  ]
}
